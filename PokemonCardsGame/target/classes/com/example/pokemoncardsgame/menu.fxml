<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="scenePane" alignment="CENTER" prefHeight="448.0" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pokemoncardsgame.MenuController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <ImageView fx:id="menuImage" fitHeight="282.0" fitWidth="346.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pokemon_trading_card_game.jpg" />
         </image>
      </ImageView>
      <VBox prefHeight="43.0" prefWidth="410.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="credits" mnemonicParsing="false" onAction="#setCredits" prefHeight="26.0" prefWidth="106.0" text="Credits" />
                  <Button fx:id="play" mnemonicParsing="false" onAction="#setPlay" prefHeight="26.0" prefWidth="96.0" text="Play" />
                  <Button fx:id="exitGame" mnemonicParsing="false" onAction="#setExit" prefHeight="26.0" prefWidth="110.0" text="Exit" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
