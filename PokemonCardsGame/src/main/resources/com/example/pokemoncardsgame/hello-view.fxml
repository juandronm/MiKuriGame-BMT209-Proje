<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pokemoncardsgame.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="This is an example of GUI" />
   <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
   <ToolBar prefHeight="40.0" prefWidth="648.0">
     <items>
       <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="98.0" text="Button" />
         <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="104.0" text="Button" />
         <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="106.0" text="Button" />
         <Button fx:id="pressButtonTry" mnemonicParsing="false" onAction="#automaticIncrease" prefHeight="24.0" prefWidth="134.0" text="Press here to say hello!" textFill="#302a2a">
            <font>
               <Font name="Book Antiqua Bold Italic" size="12.0" />
            </font>
         </Button>
          <Button fx:id="helloButton" onAction="#onHelloButtonClick" prefHeight="26.0" prefWidth="174.0" text="Hello!" />
     </items>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
   </ToolBar>
   <Label fx:id="tryText" text="Label" />
</VBox>
