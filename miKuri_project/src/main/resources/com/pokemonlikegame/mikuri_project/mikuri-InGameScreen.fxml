<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" onKeyPressed="#pause" prefHeight="370.0" prefWidth="673.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokemonlikegame.mikuri_project.InGameController">
   <ImageView fitHeight="404.0" fitWidth="715.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@blurred_background_resized_715x404.jpg" />
      </image>
   </ImageView>
   <Label fx:id="pauseMenu" alignment="CENTER" layoutX="224.0" layoutY="101.0" prefHeight="99.0" prefWidth="266.0" style="-fx-background-color: #009990;" text="Game paused" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="24.0" />
      </font>
   </Label>
   <Button fx:id="exitFromInGame" layoutX="509.0" layoutY="253.0" mnemonicParsing="false" onAction="#onExitGameButtonClick" prefHeight="59.0" prefWidth="182.0" style="-fx-background-color: #ff77cc;" text="Exit game" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="inGameToMenu" layoutX="24.0" layoutY="253.0" mnemonicParsing="false" onAction="#menuBack" prefHeight="59.0" prefWidth="182.0" style="-fx-background-color: #ff77cc;" text="Main menu" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="continueGame" layoutX="266.0" layoutY="253.0" mnemonicParsing="false" onAction="#continueGame" prefHeight="59.0" prefWidth="182.0" style="-fx-background-color: #ff77cc;" text="Continue game" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="evetButton" layoutX="24.0" layoutY="263.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="182.0" style="-fx-background-color: #ff77cc;" text="Yes" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="hayirButton" layoutX="490.0" layoutY="259.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="202.0" style="-fx-background-color: #ff77cc;" text="No" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="18.0" />
      </font>
   </Button>
   <ImageView fx:id="environment" fitHeight="419.0" fitWidth="715.0" layoutY="-1.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@environment.jpg" />
      </image>
   </ImageView>
</AnchorPane>
