<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokemonlikegame.mikuri_project.MikuriController">
   <ImageView fitHeight="450.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" scaleZ="0.0">
      <image>
         <Image url="@background.jpg" />
      </image>
   </ImageView>
   <ImageView fx:id="mikuriTextImage" fitHeight="223.0" fitWidth="300.0" layoutX="262.0" layoutY="114.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@mikuriTextImage.png" />
      </image>
   </ImageView>

    <Button fx:id="continueButton" layoutX="20.0" layoutY="20.0" onAction="#onContinueButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff77cc;" text="Continue" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="24.0" />
      </font></Button>
    <Button fx:id="newGameButton" layoutX="20.0" layoutY="140.0" onAction="#onNewGameButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff77cc;" text="New Game" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="24.0" />
      </font></Button>
    <Button fx:id="optionsButton" layoutX="20.0" layoutY="260.0" onAction="#onOptionsButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff77cc;" text="Options" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="24.0" />
      </font></Button>
    <Button fx:id="exitGameButton" layoutX="20.0" layoutY="380.0" onAction="#onExitGameButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff77cc;" text="Exit Game" textFill="WHITE">
      <font>
         <Font name="Serif Bold" size="24.0" />
      </font></Button>

    <Button fx:id="yesButton" layoutX="195.0" layoutY="250.0" prefHeight="30.0" prefWidth="60.0" style="-fx-background-color: #ff77cc;" text="Yes" textFill="WHITE" visible="false" />
    <Button fx:id="noButton" layoutX="345.0" layoutY="250.0" prefHeight="30.0" prefWidth="60.0" style="-fx-background-color: #ff77cc;" text="No" textFill="WHITE" visible="false" />

    <Label fx:id="txt" alignment="CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="150.0" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #ff77cc;" textAlignment="CENTER" textFill="WHITE" visible="false">
      <font>
         <Font name="Calibri Bold Italic" size="18.0" />
      </font></Label>
    
   <ProgressBar fx:id="loadingProgressBar" layoutX="150.0" layoutY="310.0" prefHeight="30.0" prefWidth="300.0" progress="0.0" style="-fx-background-color: #ff77cc;" visible="false" />
</AnchorPane>
